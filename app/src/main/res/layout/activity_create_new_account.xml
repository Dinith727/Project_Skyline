<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".CreateNewAccount">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="741dp"
        android:layout_height="1119dp"
        android:src="@drawable/loginas"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.458" />

    <Button
        android:id="@+id/backCreate"
        android:layout_width="93dp"
        android:layout_height="55dp"
        android:layout_marginBottom="64dp"
        android:onClick="BackCre"
        android:text="@string/backCreate"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="#61892f"
        app:cornerRadius="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_emp"
        app:layout_constraintVertical_bias="0.792"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/txt_headNew"
        android:layout_width="368dp"
        android:layout_height="60dp"
        android:layout_marginBottom="476dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/txt_headNew"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_log_heading3"
        android:layout_width="203dp"
        android:layout_height="77dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/txt_log_heading"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txt_headNew"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.637" />

    <ImageView
        android:id="@+id/imageView_cus"
        android:layout_width="84dp"
        android:layout_height="75dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="88dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_headNew"
        app:srcCompat="@drawable/cus" />

    <Button
        android:id="@+id/btn_cus"
        android:layout_width="197dp"
        android:layout_height="59dp"
        android:layout_marginTop="96dp"
        android:onClick="AsaCus"
        android:text="@string/btn_cus"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="#86C232"
        app:cornerRadius="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView_cus"
        app:layout_constraintTop_toBottomOf="@+id/txt_headNew" />

    <Button
        android:id="@+id/btn_emp"
        android:layout_width="197dp"
        android:layout_height="59dp"
        android:onClick="EmpLog"
        android:text="@string/btn_emp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="#86C232"
        app:cornerRadius="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView_emp"
        app:layout_constraintTop_toBottomOf="@+id/btn_cus"
        app:layout_constraintVertical_bias="0.209" />

    <ImageView
        android:id="@+id/imageView_emp"
        android:layout_width="84dp"
        android:layout_height="75dp"
        android:layout_marginStart="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_cus"
        app:layout_constraintVertical_bias="0.155"
        app:srcCompat="@drawable/emp" />

</androidx.constraintlayout.widget.ConstraintLayout>