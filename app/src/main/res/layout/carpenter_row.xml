<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="#59818080"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7C7C7C"
        android:orientation="vertical">

        <TextView
            android:id="@+id/carpName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:text="Arya"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/carpLocation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="SriLanka"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Average rate: "
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/carpFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:text="LKR 0.00"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/view"
                android:layout_width="75dp"
                android:layout_height="48dp"
                android:layout_marginLeft="280dp"
                android:layout_marginBottom="3dp"
                android:text="View "
                android:textSize="10sp"
                app:backgroundTint="#61892f"
                app:cornerRadius="16sp">

            </Button>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

